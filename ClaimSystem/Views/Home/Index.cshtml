@{
    ViewBag.Title = "Monthly Contract Claim System Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Monthly Contract Claim System - Dashboard</h2>

<div style="display: flex; flex-wrap: wrap; gap: 20px; margin-top: 20px;">

    <!-- Card: Total Claims -->
    <div style="flex: 1 1 200px; padding: 20px; border-radius: 10px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); background-color: #f8f9fa;">
        <h3>Total Claims</h3>
        <p style="font-size: 28px; font-weight:bold;">120</p>
    </div>

    <!-- Card: Verified Claims -->
    <div style="flex: 1 1 200px; padding: 20px; border-radius: 10px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); background-color: #d1e7dd;">
        <h3>Verified Claims</h3>
        <p style="font-size: 28px; font-weight:bold;">80</p>
    </div>

    <!-- Card: Pending Claims -->
    <div style="flex: 1 1 200px; padding: 20px; border-radius: 10px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); background-color: #fff3cd;">
        <h3>Pending Claims</h3>
        <p style="font-size: 28px; font-weight:bold;">40</p>
    </div>

    <!-- Card: Total Amount -->
   

</div>

<!-- Recent Claims Table -->
<div style="margin-top: 40px;">
    <h3>Recent Claims</h3>
    <table style="width:100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color:#007bff; color:white;">
                <th style="padding:10px; border:1px solid #ccc;">Claim ID</th>
                <th style="padding:10px; border:1px solid #ccc;">Lecturer</th>
                
                <th style="padding:10px; border:1px solid #ccc;">Status</th>
                <th style="padding:10px; border:1px solid #ccc;">Month</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="padding:10px; border:1px solid #ccc;">001</td>
                <td style="padding:10px; border:1px solid #ccc;">Dr. Smith</td>
               
                <td style="padding:10px; border:1px solid #ccc;">Verified</td>
                <td style="padding:10px; border:1px solid #ccc;">September</td>
            </tr>
            <tr>
                <td style="padding:10px; border:1px solid #ccc;">002</td>
                <td style="padding:10px; border:1px solid #ccc;">Prof. Johnson</td>
                
                <td style="padding:10px; border:1px solid #ccc;">Pending</td>
                <td style="padding:10px; border:1px solid #ccc;">September</td>
            </tr>
            <tr>
                <td style="padding:10px; border:1px solid #ccc;">003</td>
                <td style="padding:10px; border:1px solid #ccc;">Dr. Lee</td>
               
                <td style="padding:10px; border:1px solid #ccc;">Verified</td>
                <td style="padding:10px; border:1px solid #ccc;">September</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Quick Actions -->
<div style="margin-top: 40px;">
    <h3>Quick Actions</h3>
    <div style="display: flex; gap: 15px;">
        <button style="padding: 10px 20px; border-radius: 5px; background-color: #28a745; color:white; border:none; cursor:pointer;">Add New Claim</button>
        <button style="padding: 10px 20px; border-radius: 5px; background-color: #ffc107; color:white; border:none; cursor:pointer;">Verify Claims</button>
        <button style="padding: 10px 20px; border-radius: 5px; background-color: #17a2b8; color:white; border:none; cursor:pointer;">Generate Report</button>
    </div>
</div>
